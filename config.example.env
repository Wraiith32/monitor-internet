# Internet Monitor Configuration Example
# Copy this file to .env and modify the values as needed

# Target IP address to ping for connectivity checks
MONITOR_IP_ADDRESS=8.8.8.8

# Number of consecutive failures before considering internet down
MONITOR_FAILURE_THRESHOLD=2

# Interval between checks in seconds
MONITOR_CHECK_INTERVAL=10

# Path to the log file
MONITOR_LOG_FILE=internet_monitor.log

# Prowl API key for notifications (optional)
# Get your key from https://prowlapp.com
PROWL_API_KEY=your-prowl-api-key-here

# Maximum number of retry attempts
MONITOR_MAX_RETRIES=3

# Delay between retry attempts in seconds
MONITOR_RETRY_DELAY=2 